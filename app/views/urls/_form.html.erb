<%= form_with(model: url) do |form| %>
  <% if url.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
        <% url.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :target_url, style: "display: block" %>
    <%= form.text_field :target_url %>
  </div>

  <div>
    <%= form.label :shortened_key, style: "display: block" %>
    <%= form.text_field :shortened_key %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
